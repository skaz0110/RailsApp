<h1>タスク編集</h1>
<%= form_for(@task) do |f| %>
    <div><%= f.label :食材 %></div>
    <div><%= f.text_field :title %></div>
    <div><%= f.label :消費期限 %></div>
    <div><%= f.date_select :deadline ,{:discard_year => true,:use_two_digit_numbers => true}%></div>
    <div><%= f.submit %></div>
<% end %>
<%= link_to '戻る', tasks_path %>